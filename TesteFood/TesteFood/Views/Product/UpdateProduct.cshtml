@model TesteFood.Entities.Product

@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Urun Ekleme sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasyafa</a></li>
            <li class="breadcrumb-item">Urunler</li>
            <li class="breadcrumb-item active" aria-current="page">Urun Guncelleme Sayfası</li>
        </ol>
    </div>
    <div class="row">
        <div class="col">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Ekleme  Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ProductID)
                            <label>Urun Adı</label>
                            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                            <br />
                            <label>Urun Fiyatı</label>
                            @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
                            <br />
                            <label>Urun Gorsel</label>
                            @Html.TextBoxFor(x => x.ProductImageUrl, new { @class = "form-control" })
                            <br />
                            <label>Urun Acıklaması</label>
                            @Html.TextBoxFor(x => x.ProductDescription, new { @class = "form-control" })
                            <br />
                            <label>Urun Kategorisi</label>
                            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-success">Urun Gunceele</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>