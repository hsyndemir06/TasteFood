@model List<TesteFood.Entities.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutMenu.cshtml";
}


<section class="ftco-section ftco-no-pt ftco-no-pb">
    <div class="container">
        <div class="row-md-8 d-flex">
            @foreach (var x in Model)
            {

                <div class="col-md-4 d-flex">
                    <div class="img img-2 w-100 mr-md-2" style="background-image: url(@x.AboutImageUrl);"></div>
                    @*<div class="img img-2 w-100 ml-md-2" style="background-image: url(/templates/tasteit-master/images/bg_4.jpg);"></div>*@
                </div>
                <div class="col-md-8 ftco-animate makereservation p-4 p-md-5">
                    <div class="heading-section ftco-animate mb-5">
                        <span class="subheading">This is our secrets</span>
                        <h2 class="mb-4">Sırrımızı Merak Mı Ediyorsunuz..</h2>
                        <p>
                            @x.AboutDescripton
                        </p>
                        
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="ftco-section ftco-counter img" id="section-counter" style="background-image: url(https://e1.pxfuel.com/desktop-wallpaper/495/382/desktop-wallpaper-healthy-food-cooking-backgrounds-vegan-food.jpg);" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row d-md-flex align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="row d-md-flex align-items-center">
                    <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18">
                            <div class="text">
                                <strong class="number" data-number="99">0</strong>
                                <span>Müşteri Memnuniyeti</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18">
                            <div class="text">
                                <strong class="number" data-number="150">0</strong>
                                <span>Çalışan Sayısı</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18">
                            <div class="text">
                                <strong class="number" data-number="40">0</strong>
                                <span>Şube Sayısı</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18">
                            <div class="text">
                                <strong class="number" data-number="100">0</strong>
                                <span>Mutluluk Seviyesi</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

