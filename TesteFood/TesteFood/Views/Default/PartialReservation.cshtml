

@*<div class="col-sm-4 p-4 p-md-5 d-flex align-items-center justify-content-center bg-primary">*@
    @using (Html.BeginForm("Index", "Default", FormMethod.Post))
    {
        <form method="post" class="appointment-form">
            <h3 class="mb-6 text-white text-center">Yerini Ayırt..</h3>
            <div class="row">
                <div class="col-md-12 " >
                    <div class="form-group">
                        <input type="name" name="ReservationName" class="form-control" placeholder="Adınız.." required>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="email" name="ReservationEmail" class="form-control" placeholder="Mail Adresniz.." required>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="text" name="ReservationPhone" class="form-control" placeholder="Telefon Numaranız.." required>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="input-wrap">
                            <div class="icon"><span class="fa fa-calendar"></span></div>
                            <input type="text" name="ReservationDate" class="form-control book_date"required placeholder="Check-In" required>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="input-wrap">
                            <div class="icon"><span class="fa fa-clock-o"></span></div>
                            <input type="text" name="ReservationTime" class="form-control" placeholder="Saat">
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="form-field">
                            <div class="select-wrap">
                                <div class="icon"><span class="fa fa-chevron-down">Misafir Sayısı</span></div>
                                <input type="text" name="ReservationGuest" class="form-control"  placeholder="Kaç Kişi" />
                                <select name="ReservationGuest" class="form-control">
                                    <option value="ReservationGuest">Guest</option>
                                    <option value="ReservationGuest">1</option>
                                    <option value="ReservationGuest">2</option>
                                    <option value="ReservationGuest">3</option>
                                    <option value="ReservationGuest">4</option>
                                    <option value="ReservationGuest">5</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" value="Randevuyu Oluştur" class="btn- btn-white py-2 px-4">
                    </div>
                </div>
            </div>
        </form>
    }
@*</div>*@