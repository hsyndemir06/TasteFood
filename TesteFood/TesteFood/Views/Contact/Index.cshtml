
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutMenu.cshtml";
}




@Html.Action("PartialContact", "Contact")


<section class="ftco-section ftco-no-pt contact-section">
    <div class="container">
        <div class="row d-flex align-items-stretch no-gutters">
            <div class="col-md-12 p-5 order-md-last">
                <h2 class="h1 mb-5 font-weight-bold text-center">Şikayet ve Önerileriniz için Bize Yazın</h2>
                @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
                {

                    <form method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="ContactName" placeholder="Adınız.." required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="ContactEmail" placeholder="Mail Adresiniz.." required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="ContactSubject" placeholder="Konu.." required>
                        </div>
                        <div class="form-group">
                            <textarea name="ContactMessage" id="" cols="30" rows="7" class="form-control" required placeholder="Mesajınız.."></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Mesaj Gönder" class="btn btn-primary py-3 px-5 ">
                        </div>
                    </form>
                }
            </div>
            @*<div class="col-md-6 d-flex align-items-stretch">
                    <div id="map"></div>
                </div>*@
        </div>
    </div>
</section>

@Html.Action("PartialNavigation","Default")